<nav class="navbar navbar-full navbar-dark bg-primary">
  <div class="container">
    {{#link-to 'application' class='navbar-brand'}}Relationship{{/link-to}}

    <div class="pull-sm-right">
      {{#if session.isAuthenticated}}
        <button class="btn btn-secondary-outline" {{action "logout"}}>Logout</button>
      {{else}}
        <button class="btn btn-secondary-outline" {{action "login"}}>Login</button>
      {{/if}}
    </div>
  </div>
</nav>

<div class="container main-wrapper">
  <div class="row">
    <nav class="col-sm-2">
      <ul class="nav nav-stacked nav-pills">
        <li class="nav-item">
          {{#link-to 'contacts' class='nav-link'}}Contacts{{/link-to}}
        </li>
        <li class="nav-item">
          {{#link-to 'companies' class='nav-link'}}Companies{{/link-to}}
        </li>
        <li class="nav-item">
          {{#link-to 'projects' class='nav-link'}}Projects{{/link-to}}
        </li>
        <li class="nav-item">
          {{#link-to 'offers' class='nav-link'}}Offers{{/link-to}}
        </li>
        <li class="nav-item">
          {{#link-to 'tasks' class='nav-link'}}Tasks{{/link-to}}
        </li>
      </ul>
    </nav>
    <section id="main" class="col-sm-7">
      {{outlet}}
    </section>
    <aside class="col-sm-3">
      {{#immutable-task-list items=persistedTasks showCompleted=false as |task|}}
        {{#if task.project}}
          <strong>[{{task.project.shortCode}}]</strong>
        {{else if task.offer}}
          <em>[{{task.offer.shortCode}}]</em>
        {{/if}}
        {{task.description}}
      {{/immutable-task-list}}
    </aside>
  </div>
</div>

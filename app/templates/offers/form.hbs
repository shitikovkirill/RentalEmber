<h3>{{#if model.isNew}}New Offer{{else}}Edit Offer{{/if}}</h3>

<form>
  <div class="form-group">
    {{input class="form-control form-control-lg" placeholder="Name" value=model.name}}
  </div>

  <div class="form-group">
    {{#collection-select content=projects selected=model.project action=(action (mut model.project)) as |item|}}
      {{item.name}}
    {{/collection-select}}
  </div>

  <div class="form-group row">
    <div class="col-sm-6">
      {{input type="date" class="form-control" placeholder="Valid Until" value=model.validUntil}}
    </div>
    <div class="col-sm-6">
      {{input class="form-control form-control-lg" placeholder="Price" value=model.price}}
    </div>
  </div>

  <p>
    <button type="submit" class="btn btn-success" {{action "save"}}>
      {{#if model.isNew}}Create{{else}}Update{{/if}}
    </button>
    <button class="btn btn-default" {{action "cancel"}}>Cancel</button>
  </p>
</form>

<div class="jumbo show-listing">
  <h2 class="title">{{model.title}}</h2>
  <div class="right detail-section">
    <div class="detail owner">
      <strong>Владелец:</strong> {{model.owner}}
    </div>
    <div class="detail">
      <strong>Категории:</strong>
      {{#each model.categories as |category| }}
        <span>{{category.title}}</span>
      {{/each}}
    </div>
    <div class="detail">
      <strong>Расположение:</strong> {{model.city}}
    </div>
    <div class="detail">
      <strong>Количество комнат:</strong> {{model.bedrooms}}
    </div>
    <p>&nbsp;</p>
    <p class="description">{{model.description}}</p>
  </div>
  <img src="{{model.image}}" class="rental-pic">
</div>

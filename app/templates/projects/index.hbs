{{#link-to "companies.new"}}New Company{{/link-to}}

<h3>Projects</h3>

<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |project|}}
      <tr>
        <td>{{project.name}}</td>
        <td>
          {{#link-to 'projects.show' project}}Details{{/link-to}}
          |
          {{#link-to 'projects.edit' project}}Edit{{/link-to}}
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="2" style="text-align: center; font-style: italic">
          You have no projects yet.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>

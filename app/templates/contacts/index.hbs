<p class="pull-sm-right">
  {{#link-to "contacts.new" class="btn btn-primary"}}Add Contact{{/link-to}}
</p>

<h3>Contacts</h3>

<table class="table table-striped table-sm" style="clear: both;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Company</th>
      <th>Title</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |contact|}}
      <tr>
        <td>
          {{#link-to "contacts.show" contact}}
            {{contact.fullName}}
          {{/link-to}}
        </td>
        <td>{{contact.company.name}}</td>
        <td>{{contact.title}}</td>
        <td>{{contact.email}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="5" style="text-align: center; font-style: italic">
          You have no contacts yet.
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
